<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="demo.ZMasterDetailApp.controller.Detail"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:f="sap.ui.layout.form">
	<App>
		<pages>
			<Page title="For Manager" class="sapUiStdPage">
				<content>
					<VBox class="sapUiSmallMargin">
						<f:SimpleForm id="SimpleFormChange354" editable="true" layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3" labelSpanM="3"
							labelSpanS="12" adjustLabelSpan="false" emptySpanXL="4" emptySpanL="4" emptySpanM="4" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
							singleContainerFullSize="false">
							<f:content>
								<Label text="RequestNo"/>
								<Text id="TxtReqno"/>
								<Label text="PlantName"/>
								<Text id="Txtplantname"/>
								<Label text="Workcenter"/>
								<Text id="Txtwrkcntr1"/>
								<Label text="Priority"/>
								<Text id="Txtpriority1"/>
								<Label text="Date"/>
								<Text id="Txtdate1"/>
							</f:content>
						</f:SimpleForm>
					</VBox>
					<IconTabBar id="idIconTabBarMulti" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
						<items>
							<IconTabFilter icon="sap-icon://hint">
								<f:SimpleForm id="SimpleForm2" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
									adjustLabelSpan="false" emptySpanXL="1" emptySpanL="1" emptySpanM="1" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
									singleContainerFullSize="false">
									<f:content>
										<Label text="Request Reason"/>
										<Text id="Txtreqrsn1"/>
										<Label text="AssignTo"/>
										<Text id="Txtassignto1"/>
									</f:content>
								</f:SimpleForm>
							</IconTabFilter>
							<IconTabFilter icon="sap-icon://notes">
								<f:SimpleForm id="SimpleForm1" editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="4" labelSpanS="12"
									adjustLabelSpan="false" emptySpanXL="1" emptySpanL="1" emptySpanM="1" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1"
									singleContainerFullSize="false">
									<f:content>
										<Label text="Workcenter Name"/>
										<Text id="Txtwrkcentr1"/>
										<Label text="Machine Name"/>
										<Text id="Txtmachinename1"/>
									</f:content>
								</f:SimpleForm>
							</IconTabFilter>
						</items>
					</IconTabBar>
				</content>
				<footer>
					<OverflowToolbar>
						<ToolbarSpacer/>
						<Button type="Emphasized" text="Edit" press="OnEdit">
						</Button>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>